<resources>
    <!-- Base application theme. -->
    <style name="AppThemeDefault" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:textColor">@color/vectorColor</item>
    </style>


    <style name="AppThemeDefaultNoBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="spinnerTheme" parent="Platform.Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="controlThemme">
        <item name="colorControlActivated">@color/thumb</item>
        <item name="thumbTint">@color/thumb</item>
        <item name="trackTint">@color/thumb</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:gravity">clip_vertical|start</item>
        <item name="android:lines">1</item>
       <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:background">@drawable/rect_white</item>
    </style>

    <style name="angleLeftStyle">
        style="@style/EditTextStyle"
        <item name="android:background">@drawable/rect_white_left</item>
    </style>

    <style name="abgleRightStyle">
        style="@style/EditTextStyle"
        <item name="android:background">@drawable/rect_white_right</item>
    </style>


    <style name="buttonSW300" parent="Widget.AppCompat.Button.Small" >
       <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/rect_white</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="tablePoint" parent="buttonSW300" >
        <item name="android:background">@drawable/rect_table_header</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="buttonSW330" parent="buttonSW300" >
        <item name="android:textSize">18sp</item>
    </style>



</resources>
