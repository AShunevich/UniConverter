<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alwaysDrawnWithCache="true"
    android:background="#5d737e"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/currency_button"
        style="@android:style/Widget.Button.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#ffffff"
        android:drawableTop="@drawable/currency_55"
        android:padding="6dp"
        android:text="@string/currency_button"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_button" />

    <Button
        android:id="@+id/calculator_button"
        style="@android:style/Widget.Button.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#ffffff"
        android:drawableTop="@drawable/calc_55"
        android:padding="6dp"
        android:text="@string/calculator_button"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currency_button" />

    <Button
        android:id="@+id/sphere_button"
        style="@android:style/Widget.Button.Small"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#ffffff"
        android:drawableTop="@drawable/circle_55"
        android:padding="8dp"
        android:text="@string/circleSphere_button"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/decScience_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/decScience_button" />

    <Button
        android:id="@+id/speed_button"
        style="@android:style/Widget.Button.Small"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#ffffff"

        android:drawableTop="@drawable/speed_55"
        android:padding="8dp"
        android:text="@string/speed_button"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/length_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/length_button" />

    <Button
        android:id="@+id/area_button"
        style="@android:style/Widget.Button.Small"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#ffffff"
        android:drawableTop="@drawable/area_55"
        android:padding="8dp"
        android:text="@string/area_button"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/temp_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/temp_button" />

    <Button
        android:id="@+id/temp_button"
        style="@android:style/Widget.Button.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#ffffff"
        android:drawableTop="@drawable/temp_55"
        android:padding="6dp"
        android:text="@string/temperature_button"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/length_button"
        style="@android:style/Widget.Button.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#ffffff"
        android:backgroundTintMode="src_atop"
        android:drawableTop="@drawable/length_55"
        android:padding="6dp"
        android:text="@string/distance_button"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp_button" />

    <Button
        android:id="@+id/time_button"
        style="@android:style/Widget.Button.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#ffffff"
        android:drawableTop="@drawable/time_55"
        android:padding="6dp"
        android:text="@string/time_button"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/length_button" />

    <Button
        android:id="@+id/volume_button"
        style="@android:style/Widget.Button.Small"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#ffffff"
        android:drawableTop="@drawable/volume_55"
        android:padding="8dp"
        android:text="@string/volume_button"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/time_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/time_button" />

    <Button
        android:id="@+id/mass_button"
        style="@android:style/Widget.Button.Small"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#ffffff"
        android:drawableTop="@drawable/mass_55"
        android:padding="8dp"
        android:text="@string/mass_button"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/currency_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/currency_button" />

    <Button
        android:id="@+id/force_button"
        style="@android:style/Widget.Button.Small"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#ffffff"
        android:drawableTop="@drawable/force_55"
        android:padding="8dp"
        android:text="@string/force_button"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/calculator_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/calculator_button" />

    <Button
        android:id="@+id/decScience_button"
        style="@android:style/Widget.Button.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#ffffff"
        android:drawableTop="@drawable/dec_science_55_alt"
        android:padding="6dp"
        android:text="@string/decScienceButton"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculator_button" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="229dp"
        android:layout_marginEnd="182dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>